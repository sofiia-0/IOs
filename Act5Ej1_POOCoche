import Foundation

// Definición de la clase Coche
class Coche {
    // Propiedades de la clase Coche
    var marca: String
    var modelo: String
    var año: Int
    
    // Inicializador (constructor) de la clase Coche
    init(marca: String, modelo: String, año: Int) {
        self.marca = marca
        self.modelo = modelo
        self.año = año
    }
    
    // Método para describir el coche
    func describir() -> String {
        return "Detalles del coche > \n\t \(marca) \(modelo) del año \(año)"
    }
}

// Creación de una instancia de Coche
let miCoche = Coche(marca: "Bentley", modelo: "Continental GT", año: 2003)

// Llamada al método describir
let descripcion = miCoche.describir()
print(descripcion) // 
