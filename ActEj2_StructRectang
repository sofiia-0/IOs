import Foundation

// Definición del struct Rectángulo
struct Rectángulo {
    // Propiedades del rectángulo
    var ancho: Double
    var alto: Double
    
    // Función para calcular el área
    func calcularArea() -> Double {
        return ancho * alto
    }
    
    // Función para calcular el perímetro
    func calcularPerimetro() -> Double {
        return 2 * (ancho + alto)
    }
}

// Creación de una instancia de Rectángulo
let miRectangulo = Rectángulo(ancho: 5.0, alto: 3.0)

// Llamada a los métodos para calcular el área y el perímetro
let area = miRectangulo.calcularArea()
let perimetro = miRectangulo.calcularPerimetro()

// Imprimir resultados
print("El área del rectángulo es: \(area)")
print("El perímetro del rectángulo es: \(perimetro)")
