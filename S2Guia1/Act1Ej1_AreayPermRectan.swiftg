import Foundation

// Función que retorna una tupla con dos valores de tipo Double
func calcularAreaYPerimetro(ancho: Double, alto: Double) -> (Double, Double) {
  // Declaración de constantes que calculan área y perímetro
  let area = ancho * alto
  let perimetro = 2 * (ancho + alto)
  
  // Reorna una tupla que contiene el área y el perímetro
  return (area, perimetro)
}

// Descompone la tupla resultante en las dos constantes
let (area, perimetro) = calcularAreaYPerimetro(ancho: 5, alto: 10)

// Impresión
print("ÁREA > \(area)")
print("PERÍMETRO > \(perimetro)")
